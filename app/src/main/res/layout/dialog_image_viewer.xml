<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Image container - click outside this to dismiss -->
    <ImageView
        android:id="@+id/fullscreen_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="Full screen book cover"
        android:padding="32dp"
        android:scaleType="fitCenter" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/image_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#FFFFFF" />

    <!-- Close button (X) - on top of everything -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Close image viewer"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="#FFFFFF" />

</FrameLayout>

